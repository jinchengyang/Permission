<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nepxion.permission.core.dao.ResourceDao">
    <resultMap id="ResourceMap" type="Resource">
        <id property="id" column="id"/>
        <result property="tenantId" column="tenant_id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="pid" column="pid"/>
        <result property="orderNo" column="order_no"/>
        <result property="url" column="url"/>
        <result property="extraJson" column="extra_json"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="options" column="options"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="table_name">
        resource
    </sql>

    <sql id="columns_all">
        id,
        <include refid="columns_exclude_id"/>
    </sql>

    <sql id="columns_exclude_id">
        `tenant_id`, `code`, `name`, `type`, `pid`, `order_no`, `url`, `extra_json`, `created_by`, `updated_by`, `options`,
        `is_deleted`, created_at, updated_at
    </sql>

    <sql id="values_exclude_id">
        #{tenantId}, #{code}, #{name}, #{type}, #{pid}, #{orderNo}, #{url}, #{extraJson}, #{createdBy}, #{updatedBy},
        #{options}, #{isDeleted}, now(), now()
    </sql>

    <sql id="criteria">
        <where>
            <if test="tenantId != null">AND `tenant_id` = #{tenantId}</if>
            <if test="code != null">AND `code` = #{code}</if>
            <if test="name != null">AND `name` = #{name}</if>
            <if test="type != null">AND `type` = #{type}</if>
            <if test="pid != null">AND `pid` = #{pid}</if>
            <if test="orderNo != null">AND `order_no` = #{orderNo}</if>
            <if test="url != null">AND `url` = #{url}</if>
            <if test="extraJson != null">AND `extra_json` = #{extraJson}</if>
            <if test="createdBy != null">AND `created_by` = #{createdBy}</if>
            <if test="updatedBy != null">AND `updated_by` = #{updatedBy}</if>
            <if test="options != null">AND `options` = #{options}</if>
            <if test="isDeleted != null">AND `is_deleted` = #{isDeleted}</if>
            <if test="createdAt != null">AND <![CDATA[created_at >= #{createdAt}]]> </if>
            <if test="updatedAt != null">AND <![CDATA[updated_at < #{updatedAt}]]> </if>
        </where>
    </sql>

    <insert id="create" parameterType="Resource" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="table_name"/>
        (<include refid="columns_exclude_id"/>)
        VALUES
        (<include refid="values_exclude_id"/>)
    </insert>

    <insert id="creates" parameterType="Resource" useGeneratedKeys="true">
        INSERT INTO
        <include refid="table_name"/>
        (<include refid="columns_exclude_id"/>)
        VALUES
        <foreach collection="list" item="i" index="index" separator=",">
            (#{i.tenantId}, #{i.code}, #{i.name}, #{i.type}, #{i.pid}, #{i.orderNo}, #{i.url}, #{i.extraJson},
            #{i.createdBy}, #{i.updatedBy}, #{i.options}, #{i.isDeleted}, now(), now())
        </foreach>
    </insert>

    <select id="findById" parameterType="long" resultMap="ResourceMap">
        SELECT
        <include refid="columns_all"/>
        FROM
        <include refid="table_name"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByIds" parameterType="list" resultMap="ResourceMap">
        SELECT
        <include refid="columns_all"/>
        FROM
        <include refid="table_name"/>
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <update id="update" parameterType="Resource">
        UPDATE
        <include refid="table_name"/>
        <set>
            <if test="tenantId != null">`tenant_id` = #{tenantId},</if>
            <if test="code != null">`code` = #{code},</if>
            <if test="name != null">`name` = #{name},</if>
            <if test="type != null">`type` = #{type},</if>
            <if test="pid != null">`pid` = #{pid},</if>
            <if test="orderNo != null">`order_no` = #{orderNo},</if>
            <if test="url != null">`url` = #{url},</if>
            <if test="extraJson != null">`extra_json` = #{extraJson},</if>
            <if test="createdBy != null">`created_by` = #{createdBy},</if>
            <if test="updatedBy != null">`updated_by` = #{updatedBy},</if>
            <if test="options != null">`options` = #{options},</if>
            <if test="isDeleted != null">`is_deleted` = #{isDeleted},</if>
            updated_at = now()
        </set>
        WHERE id = #{id}
    </update>

    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM
        <include refid="table_name"/>
        <include refid="criteria"/>
    </select>

    <select id="paging" parameterType="map" resultMap="ResourceMap">
        SELECT
        <include refid="columns_all"/>
        FROM
        <include refid="table_name"/>
        <include refid="criteria"/>
        ORDER BY `id` DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="list" parameterType="map" resultMap="ResourceMap">
        SELECT
        <include refid="columns_all"/>
        FROM
        <include refid="table_name"/>
        <include refid="criteria"/>
        ORDER BY `id` DESC
    </select>

    <select id="findByChildren" parameterType="long" resultMap="ResourceMap">
        SELECT
        <include refid="columns_all"/>
        FROM
        <include refid="table_name"/>
        WHERE pid = #{pid}
    </select>

    <select id="findTopLevel" parameterType="long" resultMap="ResourceMap">
        SELECT
        <include refid="columns_all"/>
        FROM
        <include refid="table_name"/>
        WHERE pid is null
    </select>

</mapper>
